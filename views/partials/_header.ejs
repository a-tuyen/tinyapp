<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
  </div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (username) { %>
      <h6>Logged in as: <%= username %>   </h6>
      <td><form method="POST" action='/logout' style="width: 100px; margin: 1em">
        <button type='submit' class='btn btn-secondary'>Logout</button></form></td>
      <% } else { %>
        <form class="form-inline" action="/login" method="POST">
          <div class="form-group mb-2">
            <label for="username"></label>
            <input class="form-control" type="text" name="username" placeholder="Username" style="width: 300px; margin: 1em">
            <button type="submit" class="btn btn-primary">Login</button>
          </div>
        <% } %>
      <!-- <label for="password">Password</label>
      <input id="password" type="password" name="password"> -->
      
    </form>
  </nav>
</header>
